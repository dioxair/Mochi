<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mochi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="720"
             x:Class="Mochi.Views.MainView"
             x:DataType="vm:MainViewModel">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <DockPanel>
        <!-- Bottom Navigation Bar -->
        <Border DockPanel.Dock="Bottom"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,4,0,6">
            <UniformGrid Columns="5">

                <!-- emojis may or may not be sprite placeholders -->
                <Button Command="{Binding NavigateHomeCommand}"
                        Classes="navBtn"
                        Classes.active="{Binding IsHomeSelected}">
                    <StackPanel HorizontalAlignment="Center" Spacing="2">
                        <TextBlock Text="🏠" FontSize="20" HorizontalAlignment="Center" />
                        <TextBlock Text="Home" FontSize="10" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding NavigateCareCommand}"
                        Classes="navBtn"
                        Classes.active="{Binding IsCareSelected}">
                    <StackPanel HorizontalAlignment="Center" Spacing="2">
                        <TextBlock Text="🍖" FontSize="20" HorizontalAlignment="Center" />
                        <TextBlock Text="Care" FontSize="10" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding NavigateShopCommand}"
                        Classes="navBtn"
                        Classes.active="{Binding IsShopSelected}">
                    <StackPanel HorizontalAlignment="Center" Spacing="2">
                        <TextBlock Text="🛒" FontSize="20" HorizontalAlignment="Center" />
                        <TextBlock Text="Shop" FontSize="10" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding NavigateReportCommand}"
                        Classes="navBtn"
                        Classes.active="{Binding IsReportSelected}">
                    <StackPanel HorizontalAlignment="Center" Spacing="2">
                        <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center" />
                        <TextBlock Text="Report" FontSize="10" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding NavigateHelpCommand}"
                        Classes="navBtn"
                        Classes.active="{Binding IsHelpSelected}">
                    <StackPanel HorizontalAlignment="Center" Spacing="2">
                        <TextBlock Text="❓" FontSize="20" HorizontalAlignment="Center" />
                        <TextBlock Text="Help" FontSize="10" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

            </UniformGrid>
        </Border>

        <!-- Page Content -->
        <ContentControl Content="{Binding CurrentPage}" />
    </DockPanel>
</UserControl>