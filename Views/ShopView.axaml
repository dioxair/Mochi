<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mochi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="620"
             x:Class="Mochi.Views.ShopView"
             x:DataType="vm:ShopViewModel">

    <Design.DataContext>
        <vm:ShopViewModel />
    </Design.DataContext>

    <StackPanel Spacing="20" Margin="20,24" HorizontalAlignment="Stretch">

        <TextBlock Text="Pet Shop"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <!-- Wallet Display -->
        <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                CornerRadius="12"
                Padding="16"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="{Binding WalletBalance, StringFormat='Wallet: ${0}'}"
                           FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Shop Items (placeholder list) -->
        <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                CornerRadius="12"
                Padding="16"
                Margin="8,0">
            <StackPanel Spacing="12">
                <TextBlock Text="Available Items" FontWeight="SemiBold" FontSize="14" Opacity="0.7" />

                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="0,0,0,1" Padding="0,8">
                    <DockPanel>
                        <TextBlock Text="Premium Food" DockPanel.Dock="Left" FontSize="14" />
                        <TextBlock Text="$10" DockPanel.Dock="Right" HorizontalAlignment="Right"
                                   FontSize="14" Opacity="0.7" />
                    </DockPanel>
                </Border>

                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="0,0,0,1" Padding="0,8">
                    <DockPanel>
                        <TextBlock Text="Toy" DockPanel.Dock="Left" FontSize="14" />
                        <TextBlock Text="$15" DockPanel.Dock="Right" HorizontalAlignment="Right"
                                   FontSize="14" Opacity="0.7" />
                    </DockPanel>
                </Border>

                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="0,0,0,1" Padding="0,8">
                    <DockPanel>
                        <TextBlock Text="Comfy Bed" DockPanel.Dock="Left" FontSize="14" />
                        <TextBlock Text="$25" DockPanel.Dock="Right" HorizontalAlignment="Right"
                                   FontSize="14" Opacity="0.7" />
                    </DockPanel>
                </Border>

                <Border Padding="0,8">
                    <DockPanel>
                        <TextBlock Text="Medicine" DockPanel.Dock="Left" FontSize="14" />
                        <TextBlock Text="$20" DockPanel.Dock="Right" HorizontalAlignment="Right"
                                   FontSize="14" Opacity="0.7" />
                    </DockPanel>
                </Border>
            </StackPanel>
        </Border>

        <TextBlock Text="{Binding StatusMessage}"
                   FontSize="14" Opacity="0.5"
                   HorizontalAlignment="Center"
                   Margin="0,8" />

    </StackPanel>
</UserControl>