<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mochi.ViewModels"
             xmlns:domain="using:Mochi.Domain"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="620"
             x:Class="Mochi.Views.ShopView"
             x:DataType="vm:ShopViewModel">

    <Design.DataContext>
        <vm:ShopViewModel />
    </Design.DataContext>

    <StackPanel Spacing="20" Margin="20,24" HorizontalAlignment="Stretch">

        <TextBlock Text="Pet Shop"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <!-- Wallet Display -->
        <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                CornerRadius="12"
                Padding="16"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="{Binding WalletBalance, StringFormat='Wallet: ${0}'}"
                           FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Shop Items -->
        <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                CornerRadius="12"
                Padding="16"
                Margin="8,0">
            <StackPanel Spacing="4">
                <TextBlock Text="Available Items" FontWeight="SemiBold" FontSize="14" Opacity="0.7"
                           Margin="0,0,0,8" />

                <ItemsControl ItemsSource="{Binding ShopItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="domain:ShopItemDefinition">
                            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                    BorderThickness="0,0,0,1" Padding="0,8" Margin="0,0,0,4">
                                <DockPanel>
                                    <Button Content="Buy"
                                            Command="{Binding $parent[UserControl].((vm:ShopViewModel)DataContext).BuyCommand}"
                                            CommandParameter="{Binding}"
                                            DockPanel.Dock="Right"
                                            Padding="12,6"
                                            Margin="8,0,0,0" />
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" />
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="{Binding Price, StringFormat='${0}'}"
                                                       FontSize="12" Opacity="0.7" />
                                            <TextBlock Text="{Binding DurationDays, StringFormat='Â· {0}d'}"
                                                       FontSize="12" Opacity="0.5" />
                                        </StackPanel>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <TextBlock Text="{Binding StatusMessage}"
                   FontSize="14" Opacity="0.5"
                   HorizontalAlignment="Center"
                   Margin="0,8" />

    </StackPanel>
</UserControl>