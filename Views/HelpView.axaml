<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mochi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="620"
             x:Class="Mochi.Views.HelpView"
             x:DataType="vm:HelpViewModel">

    <Design.DataContext>
        <vm:HelpViewModel />
    </Design.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20,24,20,8">
        <StackPanel Spacing="16" HorizontalAlignment="Stretch">

            <TextBlock Text="How to Play"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16" Margin="8,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="Welcome to Mochi!" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean vel suscipit urna, sed ultrices risus. Vivamus pharetra vehicula fringilla. Cras dapibus erat ut leo ultrices, sit amet lobortis lectus feugiat. Nunc eu eros vitae lacus tempor imperdiet a a mi. Donec vel massa diam. Mauris ac nisi sit amet tortor auctor faucibus at sed dolor. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Aliquam eget sem id nisi dictum egestas at ac nunc. Nulla aliquam orci non dui fringilla pulvinar. 
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
