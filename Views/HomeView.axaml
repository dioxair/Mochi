<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mochi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="620"
             x:Class="Mochi.Views.HomeView"
             x:DataType="vm:HomeViewModel">

    <Design.DataContext>
        <vm:HomeViewModel />
    </Design.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20,16">
        <StackPanel Spacing="16" HorizontalAlignment="Stretch">

            <!-- Pet Name Header -->
            <TextBlock Text="{Binding PetName}"
                       FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <!-- Pet Sprite Placeholder -->
            <Border Background="#20F5A623"
                    CornerRadius="16"
                    Height="200"
                    HorizontalAlignment="Stretch"
                    Margin="20,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Text="ðŸ•" FontSize="64" HorizontalAlignment="Center" />
                    <TextBlock Text="(sprite placeholder)" FontSize="12"
                               Opacity="0.5" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>


            <!-- Mood -->
            <TextBlock Text="{Binding MoodDisplay}"
                       FontSize="18" FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,4" />

            <!-- Stats Card -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12"
                    Padding="16"
                    Margin="12,0">
                <StackPanel Spacing="12">
                    <TextBlock Text="Stats" FontWeight="SemiBold" FontSize="14" Opacity="0.7" />

                    <!-- Hunger -->
                    <StackPanel Spacing="4">
                        <DockPanel>
                            <TextBlock Text="Hunger" DockPanel.Dock="Left" FontSize="13" />
                            <TextBlock Text="{Binding PetState.Hunger, StringFormat={}{0}/100}"
                                       DockPanel.Dock="Right" HorizontalAlignment="Right"
                                       FontSize="13" Opacity="0.7" />
                        </DockPanel>
                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding PetState.Hunger}"
                                     Height="6" Foreground="#F44336" />
                    </StackPanel>

                    <!-- Energy -->
                    <StackPanel Spacing="4">
                        <DockPanel>
                            <TextBlock Text="Energy" DockPanel.Dock="Left" FontSize="13" />
                            <TextBlock Text="{Binding PetState.Energy, StringFormat={}{0}/100}"
                                       DockPanel.Dock="Right" HorizontalAlignment="Right"
                                       FontSize="13" Opacity="0.7" />
                        </DockPanel>
                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding PetState.Energy}"
                                     Height="6" Foreground="#4CAF50" />
                    </StackPanel>

                    <!-- Happiness -->
                    <StackPanel Spacing="4">
                        <DockPanel>
                            <TextBlock Text="Happiness" DockPanel.Dock="Left" FontSize="13" />
                            <TextBlock Text="{Binding PetState.Happiness, StringFormat={}{0}/100}"
                                       DockPanel.Dock="Right" HorizontalAlignment="Right"
                                       FontSize="13" Opacity="0.7" />
                        </DockPanel>
                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding PetState.Happiness}"
                                     Height="6" Foreground="#2196F3" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>